<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/components_card_accordion_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/components_card_accordion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/components_icon_size"
        android:layout_marginEnd="@dimen/components_icon_size"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:textSize="@dimen/components_card_accordion_title_size"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/components_card_accordion_image"
        android:layout_width="@dimen/components_icon_size"
        android:layout_height="@dimen/components_icon_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/components_collapse_or_expand"
        app:srcCompat="@drawable/components_ic_down"/>

</RelativeLayout>